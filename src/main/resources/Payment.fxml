<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="248.0" prefWidth="367.0" spacing="10" style="-fx-background-color: #4e4406; -fx-padding: 20px;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/15.0.1" fx:controller="Controllers.PaymentController">

    <Label style="-fx-font-size: 16px; -fx-text-fill: #f0bd4f;" text="Enter Payment Details" />

    <TextField fx:id="cardNumberField" promptText="Card Number" style="-fx-prompt-text-fill: #f0bd4f;" />
    <TextField fx:id="expirationField" promptText="Expiration Date (MM/YY)" style="-fx-prompt-text-fill: #f0bd4f;" />
    <TextField fx:id="cvcField" promptText="CVC" style="-fx-prompt-text-fill: #f0bd4f;" />

    <Button onAction="#handlePay" prefHeight="26.0" prefWidth="91.0" style="-fx-background-color: #f0bd4f; -fx-text-fill: #4e4406;" text="Pay" />
    <Button onAction="#handleCancel" prefWidth="93.0" style="-fx-background-color: #f0bd4f; -fx-text-fill: #4e4406;" text="Cancel" />

</VBox>
