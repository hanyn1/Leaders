         <image>
            <Image url="@images/user.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="35.0" fitWidth="28.0" layoutX="342.0" layoutY="257.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/key.png" />
         </image>
