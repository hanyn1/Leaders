      <AnchorPane prefHeight="600.0" prefWidth="188.0" styleClass="form_container1" stylesheets="@CSS/styles.css">
         <children>
            <ImageView fitHeight="42.0" fitWidth="158.0" layoutX="14.0" layoutY="51.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/logo-trans.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="250.0" fitWidth="204.0" layoutX="7.0" layoutY="198.0" pickOnBounds="true" preserveRatio="true">
