<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="542.0" prefWidth="874.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ManageArticlesController">
    <children>
        <Label layoutX="20" layoutY="20" text="Title" />
        <TextField fx:id="titleField" layoutX="120" layoutY="20" />

        <Label layoutX="20" layoutY="60" text="Description" />
        <TextField fx:id="descriptionField" layoutX="120" layoutY="60" />

        <Label layoutX="20" layoutY="100" text="Content" />
        <TextField fx:id="contentField" layoutX="120" layoutY="100" />

        <Button fx:id="addButton" layoutX="20" layoutY="140" text="Add" />
        <Button fx:id="updateButton" layoutX="80" layoutY="140" text="Update" />
        <Button fx:id="deleteButton" layoutX="150" layoutY="140" text="Delete" />

        <TableView fx:id="articlesTable" layoutX="20" layoutY="180" prefHeight="300" prefWidth="656.0">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="50" text="ID" />
                <TableColumn fx:id="titleColumn" prefWidth="150" text="Title" />
                <TableColumn fx:id="descriptionColumn" prefWidth="150" text="Description" />
                <TableColumn fx:id="contentColumn" prefWidth="150" text="Content" />
                <TableColumn fx:id="dateColumn" prefWidth="150" text="Date Created" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
